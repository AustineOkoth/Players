<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Fantacy Football</title>
  <base href="/">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="favicon.ico">
</head>

<body>
  <style>
    .container {
      background-color: white;
    }

    player-details-combo {
      width: max-content;
      margin-left: auto;
      margin-right: auto;
    }

    .player-detail {
      border: 10px solid whitesmoke;
      background-color: white;
      width: fit-content;
      margin: 5px;
    }

    .header {
      font-family: 'Lobster', cursive;
    }

    .header-addBtn {
      display: flex;
      margin-left: auto;
    }

    .addBtn {
      position: absolute;
      right: 0;
    }


    button {
      font-size: 15px;
      margin: 10px;
      padding: 7px;
      color: white;
      background-color: rgba(0, 0, 0, 0.606);
      font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
      border: 0px;
    }

    ul {
      list-style: none;
    }

    li {
      margin: 3px;
      margin-left: 0px;
      padding: 5px;
      padding-left: 3px;
      background-color: white;
      border-bottom: 5px solid whitesmoke;
    }

    a{
      color: white;
      text-decoration: none;
    }
  </style>

  <div class="container">
    <div id="playerContainer" class="player-details-combo" >


      <form action="/player/add" method="get">
        <h2><button type="submit" >ADD PLAYER</button></h2>
      </form>

          <% fulldata.forEach(item=> { %>
            <div class="player-detail">
              <h3 class="addPlayer"></h3>
              <ul>
                <li style="font-size:25px ; color: skyblue;font-family :Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif"><b>
                    <%=item.name %>
                  </b></li>
                <li>Position: <%=item.position %>
                </li>
                <li>Touchdowns Made: <%=item.touchdowns_thrown %>
                </li>
                <li>Rushing Yard: <%=item.rushing_yards %>
                </li>
                <li>Sacks: <%=item.sacks %>
                </li>
                <li>Field Goal Made: <%=item.field_goals_made %>
                </li>
                <li>Field Goal Missed : <%=item.fields_goals_missed %>
                </li>
                <li>Catches Made : <%=item.catches_made %>
                </li>
              </ul>
              <div>

                <div style="display: flex;">

                  <form action="/player/delete" method="post">
                    <button name= <%=item.id %> type="submit">Delete Player</button>
                  </form>
  
                  <form action="/player/update" method="post">
                    <button name=<%=item.id %> type="submit">Update Player</button>
                  </form>

                </div>


              </div>
            </div>
       <% }) %>
    </div>

</body>

</html>